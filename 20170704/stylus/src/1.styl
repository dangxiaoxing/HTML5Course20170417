xiaolei-font-size = 16px
border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments
border()
  border: arguments
html,body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-size: xiaolei-font-size
.goods
  ul
    li
      border-radius(5px)
      border(1px solid '#333')
      width: 200px;
      height: 398px;
      font-size: xiaolei-font-size
      float:left;
      position: relative;
      background: #ffffff;
      border: 2px solid transparent;
      border-top:2px solid #ff4411;
      margin: 15px 18px;
      transition: 1s;
      overflow: hidden;
      &:hover {
        color: red;
      }
